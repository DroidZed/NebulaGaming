<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    tools:context=".NewJobOfferActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="413dp"
        android:layout_height="64dp"
        android:background="#77440C67"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Closepost"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#B0371C61"
            app:cornerRadius="29dp"
            app:icon="@drawable/ic_baseline_close_24"
            app:iconGravity="top"
            app:iconSize="27dp"
            app:iconTint="@color/white"
            app:startIconTint="@color/white"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/amaranth"
            android:text="New Offre Jobs"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="76dp"
            tools:layout_editor_absoluteY="18dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sharepostbtn"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:title="@string/share"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="140dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#B0371C61"
            app:cornerRadius="40dp"
            app:icon="@drawable/send"
            app:iconGravity="top"
            app:iconSize="27dp"
            app:iconTint="@color/white"
            app:startIconTint="@color/white"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="410dp"
        android:layout_height="757dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <View
            android:id="@+id/view"
            android:layout_width="415dp"
            android:layout_height="8dp"
            android:background="@drawable/toolbar_dropshadow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TitleOffreLay"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="15dp"
            android:contextClickable="true"
            android:hint="@string/job_title"
            android:textColorHint="#E1FFFFFF"
            app:boxBackgroundColor="@color/inputBg"
            app:boxCollapsedPaddingTop="2dp"
            app:boxStrokeColor="@color/white"
            app:counterOverflowTextColor="@color/white"
            app:counterTextColor="@color/white"
            app:endIconTint="@color/white"
            app:helperTextTextColor="@color/white"
            app:hintTextColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            tools:ignore="MissingConstraints">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/TitleOffreTf"
                android:layout_width="198dp"
                android:layout_height="58dp"
                android:shadowColor="@color/white"
                android:singleLine="true"
                android:textColor="@color/white"
                tools:ignore="DuplicateSpeakableTextCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/typeOffrespin"
            android:layout_width="192dp"
            android:layout_height="61dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bordersprofile"
            android:dropDownWidth="wrap_content"
            android:tooltipText="Offre Type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/TitleOffreLay"
            app:layout_constraintTop_toBottomOf="@+id/view"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/descOffreLay"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="397dp"
            android:layout_height="145dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="4dp"
            android:contextClickable="true"
            android:hint="@string/job_description_offre"
            android:textColorHint="#E1FFFFFF"
            app:boxBackgroundColor="@color/inputBg"
            app:boxCollapsedPaddingTop="2dp"
            app:boxStrokeColor="@color/white"
            app:counterOverflowTextColor="@color/white"
            app:counterTextColor="@color/white"
            app:endIconTint="@color/white"
            app:helperTextTextColor="@color/white"
            app:hintTextColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TitleOffreLay"
            tools:ignore="MissingConstraints">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/DescOffreTf"
                android:layout_width="390dp"
                android:layout_height="140dp"
                android:layout_gravity="top"
                android:gravity="top"
                android:shadowColor="@color/white"
                android:textColor="@color/white"
                tools:ignore="DuplicateSpeakableTextCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/Startdatebtnn"
            android:layout_width="142dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="11dp"

            android:layout_marginEnd="243dp"
            android:layout_marginBottom="6dp"
            android:backgroundTint="#3C1E5C"
            android:text="@string/start_date"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descOffreLay"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/Startdatetext"
            android:layout_width="114dp"
            android:layout_height="21dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Startdatebtnn"
            tools:text="Start Date" />

        <Button
            android:id="@+id/Enddatebtn"
            android:layout_width="142dp"
            android:layout_height="48dp"

            android:layout_marginStart="79dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="27dp"
            android:backgroundTint="#3C1E5C"
            android:text="@string/end_date"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Startdatebtnn"
            app:layout_constraintTop_toBottomOf="@+id/descOffreLay"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/EnddateText"
            android:layout_width="121dp"
            android:layout_height="24dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="31dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Enddatebtn"
            tools:text="End Date" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/PostionOffreLay"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:contextClickable="true"
            android:hint="@string/job_position"
            android:textColorHint="#E1FFFFFF"
            app:boxBackgroundColor="@color/inputBg"
            app:boxCollapsedPaddingTop="2dp"
            app:boxStrokeColor="@color/white"
            app:counterOverflowTextColor="@color/white"
            app:counterTextColor="@color/white"
            app:endIconTint="@color/white"
            app:helperTextTextColor="@color/white"
            app:hintTextColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/EnddateText"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="7dp">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/PostionOffreTf"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:inputType="text"
                android:shadowColor="@color/white"
                android:singleLine="true"
                android:textColor="@color/white"
                tools:ignore="DuplicateSpeakableTextCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/AdressOffreLay"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="4dp"
            android:contextClickable="true"
            android:hint="@string/job_adress"
            android:textColorHint="#E1FFFFFF"
            app:boxBackgroundColor="@color/inputBg"
            app:boxCollapsedPaddingTop="2dp"
            app:boxStrokeColor="@color/white"
            app:counterOverflowTextColor="@color/white"
            app:counterTextColor="@color/white"
            app:endIconTint="@color/white"
            app:helperTextTextColor="@color/white"
            app:hintTextColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PostionOffreLay"
            tools:ignore="MissingConstraints">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/AddressOffreTf"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:inputType="text"
                android:shadowColor="@color/white"
                android:singleLine="true"
                android:textColor="@color/white"
                tools:ignore="DuplicateSpeakableTextCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/WebsiteOffreLay"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="4dp"
            android:contextClickable="true"
            android:hint="@string/link_to_apply_for_the_job"
            android:textColorHint="#E1FFFFFF"
            app:boxBackgroundColor="@color/inputBg"
            app:boxCollapsedPaddingTop="2dp"
            app:boxStrokeColor="@color/white"
            app:counterOverflowTextColor="@color/white"
            app:counterTextColor="@color/white"
            app:endIconTint="@color/white"
            app:helperTextTextColor="@color/white"
            app:hintTextColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AdressOffreLay"
            tools:ignore="MissingConstraints">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/WebsiteOffreTf"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:inputType="text"
                android:shadowColor="@color/white"
                android:singleLine="true"
                android:textColor="@color/white"
                tools:ignore="DuplicateSpeakableTextCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/EmailToOffreLay"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="4dp"
            android:contextClickable="true"
            android:hint="Email for more info"
            android:textColorHint="#E1FFFFFF"
            app:boxBackgroundColor="@color/inputBg"
            app:boxCollapsedPaddingTop="2dp"
            app:boxStrokeColor="@color/white"
            app:counterOverflowTextColor="@color/white"
            app:counterTextColor="@color/white"
            app:endIconTint="@color/white"
            app:helperTextTextColor="@color/white"
            app:hintTextColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AdressOffreLay"
            tools:ignore="MissingConstraints">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EmailToOffreTf"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:inputType="textEmailAddress"
                android:shadowColor="@color/white"
                android:singleLine="true"
                android:textColor="@color/white"
                tools:ignore="DuplicateSpeakableTextCheck" />
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>