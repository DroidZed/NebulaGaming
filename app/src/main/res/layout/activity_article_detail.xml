<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArticleDetailActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/articleTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/DarkBarColor"
        app:navigationIcon="@drawable/ic_baseline_arrow_back"
        app:title="@string/article"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/articleTopBar">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="@string/cntdesc"
                android:foreground="@drawable/gradiant_overlay"
                android:foregroundGravity="fill"
                android:scaleType="centerCrop"
                tools:src="@drawable/event_wallpaper" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/merriweather_bold"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="19sp"
                tools:text="Here is the title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageButton
                    android:id="@+id/shareBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/cntdesc"
                    android:src="@drawable/ic_baseline_share_24" />

                <ImageButton
                    android:id="@+id/bookMarkImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/cntdesc"
                    android:src="@drawable/ic_baseline_bookmark_add" />

            </LinearLayout>

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/merriweather_regular"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:text="Article title fdsfsd s f sdfsfssfsfsfsfsfsfsdf s s  s fwf  sdfd sf sdd fs s " />

            <Button
                android:id="@+id/checkArtBtn"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="0dp"
                android:fontFamily="@font/merriweather_regular"
                android:text="@string/read_more"
                android:textColor="@color/purple_500"
                android:textSize="25sp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/tagsIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/merriweather_regular"
                android:text="@string/tags"
                android:textSize="16sp"
                android:visibility="gone" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:chipSpacingHorizontal="5dp"
                app:chipSpacingVertical="-5dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
