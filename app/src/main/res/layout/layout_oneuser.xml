<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/carduserbackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="125dp"
        android:layout_height="256dp"
        android:background="@drawable/backimage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/photocardusert"
            android:layout_width="73dp"
            android:layout_height="75dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="173dp"
            android:clickable="true"
            android:src="@drawable/avatar_profile_png_picture"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.166"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/namecarduser"
            android:layout_width="117dp"
            android:layout_height="52dp"
            android:fontFamily="@font/amaranth"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#EFE8E8"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Name user" />

        <Button
            android:id="@+id/ActDesactbutton"
            android:layout_width="108dp"
            android:layout_height="48dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="17dp"
            android:backgroundTint="#BA2E47"
            android:text="@string/disable"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.425"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/namecarduser"
            app:layout_constraintVertical_bias="1.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/merriweather_italic"
        android:text="Email:"
        android:textColor="#040000"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/merriweather_italic"
        android:text="Phone:"
        android:textColor="#040000"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="42dp"
        android:layout_height="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/merriweather_italic"
        android:text="Role:"
        android:textColor="#040000"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/merriweather_italic"
        android:text="Level:"
        android:textColor="#040000"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/merriweather_italic"
        android:text="@string/status"
        android:textColor="#040000"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/merriweather_italic"
        android:text="@string/created_at"
        android:textColor="#040000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/createsatcard"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/statususer" />

    <TextView
        android:id="@+id/cardemailuser"
        android:layout_width="202dp"
        android:layout_height="37dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="18dp"
        android:fontFamily="serif"
        android:textColor="#020000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Email user" />

    <TextView
        android:id="@+id/roleUsercard"
        android:layout_width="201dp"
        android:layout_height="24dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="14dp"
        android:fontFamily="serif"
        android:textColor="#100404"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/phoneusercrd"
        tools:text="role" />

    <TextView
        android:id="@+id/phoneusercrd"
        android:layout_width="199dp"
        android:layout_height="26dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="26dp"
        android:fontFamily="serif"
        tools:text="TextView"
        android:textColor="#120101"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/cardemailuser" />

    <TextView
        android:id="@+id/levelusercard"
        android:layout_width="202dp"
        android:layout_height="23dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="15dp"
        android:fontFamily="serif"
        tools:text="TextView"
        android:textColor="#230909"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/roleUsercard" />

    <TextView
        android:id="@+id/statususer"
        android:layout_width="202dp"
        android:layout_height="27dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="13dp"
        android:fontFamily="serif"
        tools:text="TextView"
        android:textColor="#1B0505"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/levelusercard" />

    <TextView
        android:id="@+id/createsatcard"
        android:layout_width="168dp"
        android:layout_height="27dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        tools:text="TextView"
        android:textColor="#200202"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/statususer" />

</androidx.constraintlayout.widget.ConstraintLayout>