<resources>

    <style name="Theme.NoSystemUi" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/DarkPurple</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.NebulaGaming" parent="Theme.NoSystemUi">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:actionOverflowButtonStyle">@style/Widget.AppCompat.ActionButton.Overflow.MyActionButtonOverflow</item>
    </style>

    <style name="Theme.SplashTheme" parent="Theme.NebulaGaming">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>


    <style name="Widget.AppCompat.ActionButton.Overflow.MyActionButtonOverflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/logonv</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:scaleX">.7</item>
        <item name="android:scaleY">.7</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:contentDescription">@string/overflow_btn_ctn_desc</item>
    </style>

    <style name="roundimageview" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.NebulaGaming.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NebulaGaming.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NebulaGaming.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>